<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ttpai.framework.mybatis.test.dao.UserMapper">


    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.ttpai.framework.mybatis.test.model.UserVO">
        <id column="ID" property="id" />
        <result column="NAME" property="name" />
        <result column="AGE" property="age" />
        <result column="EMAIL" property="email" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        ID, NAME, AGE, EMAIL
    </sql>

    <!-- 通用【查询】条件  ！不包含主键字段 -->
    <sql id="Base_Where">
        <if test="name != null "> AND NAME = #{name}</if>
        <if test="age != null "> AND AGE = #{age}</if>
        <if test="email != null "> AND EMAIL = #{email}</if>
    </sql>

    <!-- 通用【更新】条件  ！不包含主键、CREATE_TIME、MODIFY_TIME字段 -->
    <sql id="Base_Update">
        <if test="name != null ">NAME = #{name},</if>
        <if test="age != null ">AGE = #{age},</if>
        <if test="email != null ">EMAIL = #{email},</if>
    </sql>



    <update id="updateById" parameterType="com.ttpai.framework.mybatis.test.model.UserVO">
        UPDATE USER
        <trim prefix="SET" prefixOverrides=","><include refid="Base_Update"/></trim>
        where ID = #{id};
    </update>

    <insert id="insertByEntity" parameterType="com.ttpai.framework.mybatis.test.model.UserVO">
        INSERT INTO  USER
        <trim prefix="(" suffix=")" suffixOverrides="," >
        NAME,AGE,EMAIL,
        </trim>

        <trim prefix="VALUES (" suffix=")" suffixOverrides="," >
         #{name}, #{age}, #{email},
        </trim>
    </insert>

    <select id="selectByEntity" resultMap="BaseResultMap" parameterType="com.ttpai.framework.mybatis.test.model.UserVO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM USER
        <trim prefix="WHERE" prefixOverrides="AND"><include refid="Base_Where"/></trim> ;
    </select>




</mapper>
